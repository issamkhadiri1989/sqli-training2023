{% import 'macros/generator.html.twig' as generator %}
{% extends 'layout.html.twig' %}
{% block title %}Keep in touch !{% endblock %}
{% block content %}
    <div class="contact">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-7">
                    <div class="form">
                        {{ form_start(contact_form, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    {#<input type="text" class="form-control" placeholder="Your Name"/>#}
                                    {{ form_widget(contact_form.name, {'attr': {'class': 'form-control', 'placeholder': 'Your Name'}}) }}
                                    {{ form_errors(contact_form.name) }}
                                </div>
                                <div class="form-group col-md-6">
                                    {#<input type="email" class="form-control" placeholder="Your Email"/>#}
                                    {{ form_widget(contact_form.email, {'attr': {'class': 'form-control', 'placeholder': 'Your Email'}}) }}
                                    {{ form_errors(contact_form.email) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {#<input type="text" class="form-control" placeholder="Subject"/>#}
                                {{ form_widget(contact_form.subject, {'attr': {'class': 'form-control', 'placeholder': 'Subject'}}) }}
                                {{ form_errors(contact_form.subject) }}
                            </div>
                            <div class="form-group">
                                {#<textarea class="form-control" rows="5" placeholder="Message"></textarea>#}
                                {{ form_widget(contact_form.message, {'attr': {'class': 'form-control', 'placeholder': 'Message', 'rows': 5}}) }}
                                {{ form_errors(contact_form.message) }}
                            </div>
                            <div>
                                <button type="submit">Send Message</button>
                            </div>
                        {{ form_end(contact_form) }}
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="contact-info">
                        <div class="section-header">
                            <h3>Get in Touch</h3>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit. In condimentum quam ac mi
                                viverra dictum. In efficitur ipsum diam, at dignissim lorem tempor in. Vivamus tempor
                                hendrerit finibus.
                            </p>
                        </div>
                        <h4><i class="fa fa-map-marker"></i>123 E Shop, Los Angeles, CA, USA</h4>
                        <h4><i class="fa fa-envelope"></i>email@example.com</h4>
                        <h4><i class="fa fa-phone"></i>+123-456-7890</h4>
                        <div class="social">
                            <a href=""><i class="fa fa-twitter"></i></a>
                            <a href=""><i class="fa fa-facebook"></i></a>
                            <a href=""><i class="fa fa-linkedin"></i></a>
                            <a href=""><i class="fa fa-instagram"></i></a>
                            <a href=""><i class="fa fa-youtube"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block breadcrumb %}
    {{ generator.breadcrumb([{title: 'Keep in touch'}]) }}
{% endblock %}