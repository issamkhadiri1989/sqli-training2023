{% import 'macros/generator.html.twig' as generator %}
{% extends 'layout.html.twig' %}
{% block title %}Cart{% endblock %}
{% block breadcrumb %}
    {{ generator.breadcrumb([{title: 'Cart'}]) }}
{% endblock %}
{% block content %}
    <div class="cart-page">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="thead-dark">
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Remove</th>
                            </tr>
                            </thead>
                            <tbody class="align-middle">
                            {% for item in cart.cartItems %}
                            <tr>
                                <td><a href="#"><img src="https://via.placeholder.com/83x100" alt="Image"></a></td>
                                <td><a href="#">{{ item.product.name }}</a></td>
                                <td>{{ item.product.unitPrice|number_format(2, ',', ' ') }} MAD</td>
                                <td>
                                    <div class="qty">
                                        <button class="btn-minus"><i class="fa fa-minus"></i></button>
                                        <input type="text" value="{{ item.quantity }}">
                                        <button class="btn-plus"><i class="fa fa-plus"></i></button>
                                    </div>
                                </td>
                                <td>{{ item.computeTotal|number_format(2, ',', ' ') }} MAD </td>
                                <td><button><i class="fa fa-trash"></i></button></td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="coupon">
                        <input type="text" placeholder="Coupon Code">
                        <button>Apply Code</button>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="cart-summary">
                        <div class="cart-content">
                            <h3>Cart Summary</h3>
                            <p>Sub Total<span>{{ cart.computeTotal|number_format(2, ',', ' ') }} MAD</span></p>
                            <p>Shipping Cost<span>$1</span></p>
                            <h4>Grand Total<span>{{ cart.computeTotal|number_format(2, ',', ' ') }} MAD</span></h4>
                        </div>
                        <div class="cart-btn">
                            <button>Update Cart</button>
                            <button>Checkout</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Cart End -->

{% endblock %}
